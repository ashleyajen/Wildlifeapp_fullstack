<p id="notice"><%= notice %></p>

<h1>Sightings</h1>
<br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Reccurence</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Region</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date %></td>
        <td><%= sighting.reccurence %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <th><%= sighting.region %></th>
        <th><%= sighting.animal.common_name %></th>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<form action="/sightings" method="get">
  <table>
    <thead>
      <th><label for="start_date">Start date</label></th>
      <th><label for="end_date">End date</label></th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td><input id="start_date" name="start_date" type="text" placeholder="yyyy-mm-dd"></td>
        <td><input id="end_date" name="end_date" type="text" placeholder="yyyy-mm-dd"></td>
        <td>
          <input type="text" name="region" placeholder="Region" />
        </td>
        <td><button>Run report</button></td>
      </tr>
    </tbody>
  </table>

</form>
